# Environment Configuration Example
# Copy this file to .env and adjust values as needed

# Core Settings
PROJECT_NAME="Education RAG"
ENVIRONMENT="dev"  # dev, staging, prod
DEBUG=true

# Database
# SQLite (development)
DATABASE_URL="sqlite:///./education_rag.db"

# PostgreSQL (production example)
# DATABASE_URL="postgresql://user:password@localhost:5432/education_rag"

# API Settings
API_V1_PREFIX="/api/v1"

# OpenAI Settings (Phase 3-4: Embeddings)
OPENAI_API_KEY=""
EMBEDDING_MODEL="text-embedding-3-small"
EMBEDDING_DIMENSION=1536

# Vector Store Settings
FAISS_INDEX_PATH="data/faiss/index.faiss"
FAISS_METADATA_PATH="data/faiss/metadata.json"

